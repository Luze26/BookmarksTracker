{
  "name": "Bookmarks Tracker",
  "version": "1.1",
  "description": "Updates bookmarks with the last page visited for the base url of the bookmark. Useful to read books, articles, webcomics, ...",
  "icons": { "128": "icon.png"},
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs", "storage", "bookmarks"
  ],
  "browser_action": {
    "default_title": "Track this site",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}